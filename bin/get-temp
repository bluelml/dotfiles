#  ORGANIZATION: 
#       CREATED: 07/20/2016 09:29:01 PM
#      REVISION:  ---
#===============================================================================

set -o nounset                              # Treat unset variables as an error

cpu=$(</sys/class/thermal/thermal_zone0/temp)
echo "CPU => $((cpu/1000))'C"

gpu=$(/opt/vc/bin/vcgencmd measure_temp | sed -e "s/temp=//g")
if [ -x /opt/vc/bin/vcgencmd ]; then
	echo "GPU => ${gpu}"
fi
